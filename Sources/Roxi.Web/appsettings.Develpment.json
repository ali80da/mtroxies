{
  "ConnectionStrings": {
    //"ProxiDb": "Data Source=/app/data/roxies.db"
    "DefaultConnection": "Data Source=roxi.db"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Roxi.Core.Services.Proxies": "Debug"
    }
  },
  "AllowedHosts": "*",
  "ProxiSettings": {
    "ServerAddress": "https://localhost:7243/",
    "EncryptionKey": "1234567890abcdef" // Replace with a secure key
  },
  "MTroxiesMiddleware": {
    "MaxRequestBodySize": 1048576,
    "EnableRequestLogging": true,
    "EnableResponseLogging": true,
    "EnableSecurityHeaders": true
  }
}